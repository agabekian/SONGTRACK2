@model Aversion

<div class="container">
    <p><a href="/">Home</a></p>
    <div class="row">
        <h3>Add an entry</h3>
        <div class=col-sm-12>
            <form asp-action="submitAversion" asp-route-id="@ViewBag.RecordisId" asp-controller="Home" method="post" enctype="multipart/form-data">
                <div style="visibility:hidden" class="form-group-row">
                    <span asp-validation-for="Length" class="col-sm-8 offset-sm-4 text-danger"></span>
                    <label asp-for="Length" class="col-sm-4"></label>
                    <input asp-for=" Length" class="col-sm-8 form-control">
                </div>     
                <div class="form-group-row">
                    <span asp-validation-for="Title" class="col-sm-8 offset-sm-4 text-danger"></span>
                    <label asp-for="Title" class="col-sm-4"></label>
                    <input asp-for=" Title" class="col-sm-8 form-control">
                </div>
                <div class="form-group-row">
                    <span asp-validation-for="Notes" class="col-sm-8 offset-sm-4 text-danger"></span>
                    <label asp-for="Notes" class="col-sm-4"></label>
                    <input asp-for=" Notes" class="col-sm-8 form-control">
                </div>
                
                <!-- below is needed for further edits, since its a partial that covers both. post new and edit -->
                <div style="visibility:hidden">
                    <span asp-validation-for="MediaFilePath"></span>
                    <label asp-for="MediaFilePath"></label>
                    <input asp-for="MediaFilePath">
                </div>
                
                <input type="file" name="uploadFile" class="form-control" />
                <div class="form-group-row">
                    <input class="btn btn-info" type="submit" value="Submit">
                </div>        
            </form>
        </div>
    </div>
</div>
